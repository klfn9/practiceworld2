<div class="container">
  <div class="row">
    <h2>index</h2>
      <%= link_to "新規投稿", new_trip_path %>
  </div>
  <!--レビューの繰り返し処理-->
  <h2>レビュー一覧</h2>
  <% @trips.each do |trip| %>
  <div class="row">
    <%= link_to trip_path(trip.id) do %>
    <%= image_tag trip.image, size: "550x300" %>
  <% end %>
    <%= trip.title %>
    <%= trip.body %>
    <%= trip.country %>
    <%= trip.price %>
  </div>
  <% end %>
</div>


